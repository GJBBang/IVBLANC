<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friend_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingEnd="@dimen/defaultPadding">

        <ImageView
            android:id="@+id/imageView_friend_toolbar_leadingIcon"
            android:layout_width="@dimen/smallIconSize"
            android:layout_height="@dimen/smallIconSize"
            tools:background="@drawable/ic_close" />

        <TextView
            android:id="@+id/textView_friend_toolbar"
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="at" />

        <ImageView
            android:id="@+id/imageView_friend_toolbar_trailingIcon"
            android:layout_width="@dimen/smallIconSize"
            android:layout_height="@dimen/smallIconSize"
            android:layout_gravity="end"
            tools:background="@drawable/ic_close" />

</androidx.appcompat.widget.Toolbar>